{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "noImplicitAny": false,
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types/**", "src/types/**"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "types": ["node"]
}
